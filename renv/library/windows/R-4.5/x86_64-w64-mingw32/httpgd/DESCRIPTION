Package: httpgd
Type: Package
Title: A 'HTTP' Server Graphics Device
Version: 2.0.4
Authors@R: 
    c(
      person(given = "Florian", family = "Rupprecht", email = "floruppr@gmail.com", role = c("aut", "cre"), comment = c(ORCID = "0000-0002-1795-8624")),
